@model ToyModel

@{
    ViewData["Title"] = "Editar el juguete";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ToyEdit" asp-controller="Toy">
    <input type="hidden" asp-for"Id">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name" placeholder="Nombre del juguete">
        <label asp-for="Name">Nombre del juguete</label>
    </div>

    <div class="form-floating mb-3">
        <input type="textarea" class="form-control" asp-for="Description" rows="5">
        <label asp-for="Description">Descripcion</label>
    </div>

    <button class="btn btn-outline-primary">Guardar</button>
    <a class="btn btn-outline-secundary" asp-action="ToyList" asp-controller="Toy">Regresar</a>
</form>
