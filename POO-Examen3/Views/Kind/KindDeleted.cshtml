@model KindModel

@{
    ViewData["Title"] = "Borrar el tipo";
}

<h1>@ViewData["Title"]</h1>

<form asp-asp-controller="Kind" asp-action="KindDeleted">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name" placeholder="Nombre del tipo" disabled>
        <label asp-for="Name">Nombre del tipo</label>
    </div>
    <div class="form-floating mb-3">
        <input type="textarea" class="form-control" asp-for="Description" rows="5" disabled>
        <label asp-for="Description">Descripcion</label>
    </div>

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="KindList" asp-controller="Kind">Cancelar</a>
</form>